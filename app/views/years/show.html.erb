<h1 class="text-center"><%= @year.year %></h1>

<!-- <p><%= @year.lookslikes.first.name %></p>
<p><%= @year.lookslikes.first.looks_like %></p>
<p><img src = '<%= @year.lookslikes.first.photo_url %>' ></p> -->
<div class="row">
  <% @year.lookslikes.each do |ll| %>
    <div class="col-md-4 year-looks-like">
      <%= link_to year_lookslike_path(@year, ll) do %>
      <div class="year-show-img" style="background-image:url(<%=ll.photo_url%>)">
      </div>
      <div class="year-show-name text-center">
        <div class="year-show-link-text">
          <%=ll.name%>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
